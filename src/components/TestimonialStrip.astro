---
interface Testimonial {
  quote: string;
  author: string;
  location: string;
}

const testimonials: Testimonial[] = [
  {
    quote: "JZ Development transformed our outdated kitchen into a stunning modern space. Their attention to detail and professionalism exceeded our expectations.",
    author: "Michael R.",
    location: "Nassau County"
  },
  {
    quote: "From start to finish, the team was professional, communicative, and delivered exceptional quality work on our foundation repair project.",
    author: "Sarah K.",
    location: "Suffolk County"
  },
  {
    quote: "The epoxy flooring in our garage looks incredible. Clean work, fair pricing, and they finished ahead of schedule. Highly recommend!",
    author: "James T.",
    location: "Long Island"
  }
];
---

<section class="section bg-white">
  <div class="container mx-auto px-4">
    <div class="text-center mb-10">
      <h2 class="text-[var(--charcoal)] mb-4">What Our Clients Say</h2>
      <p class="text-gray-600 max-w-2xl mx-auto">
        We take pride in delivering quality work and exceptional service to every client.
      </p>
    </div>

    <div class="grid md:grid-cols-3 gap-6 lg:gap-8">
      {testimonials.map((testimonial) => (
        <div class="bg-[var(--light-gray)] rounded-xl p-6 relative">
          <!-- Quote Icon -->
          <svg class="w-10 h-10 text-[var(--slate-blue)] opacity-20 absolute top-4 right-4" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10h-9.983zm-14.017 0v-7.391c0-5.704 3.748-9.57 9-10.609l.996 2.151c-2.433.917-3.996 3.638-3.996 5.849h4v10h-10z"/>
          </svg>

          <div class="relative">
            <!-- Stars -->
            <div class="flex gap-1 mb-4">
              {[...Array(5)].map(() => (
                <svg class="w-5 h-5 text-[var(--accent-gold)]" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                </svg>
              ))}
            </div>

            <p class="text-gray-700 mb-4 italic">
              "{testimonial.quote}"
            </p>

            <div class="flex items-center gap-3">
              <div class="w-10 h-10 rounded-full bg-[var(--slate-blue)] flex items-center justify-center">
                <span class="text-white font-semibold text-sm">
                  {testimonial.author.split(' ').map(n => n[0]).join('')}
                </span>
              </div>
              <div>
                <p class="font-semibold text-[var(--charcoal)]">{testimonial.author}</p>
                <p class="text-sm text-gray-500">{testimonial.location}</p>
              </div>
            </div>
          </div>
        </div>
      ))}
    </div>

  </div>
</section>
