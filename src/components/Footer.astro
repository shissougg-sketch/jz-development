---
const currentYear = new Date().getFullYear();

const services = [
  { href: '/services#masonry', label: 'Masonry & Stonework' },
  { href: '/services#foundations', label: 'Foundations & Concrete' },
  { href: '/services#renovations', label: 'Full Gut Renovations' },
  { href: '/services#kitchens-bathrooms', label: 'Kitchens & Bathrooms' },
  { href: '/services#epoxy', label: 'Epoxy Flooring' },
  { href: '/services#exterior', label: 'Exterior Work' },
  { href: '/services#new-construction', label: 'New Construction' },
];

const quickLinks = [
  { href: '/', label: 'Home' },
  { href: '/services', label: 'Services' },
  { href: '/projects', label: 'Our Work' },
  { href: '/about', label: 'About Us' },
  { href: '/contact', label: 'Contact' },
];
---

<footer class="bg-[var(--charcoal)] text-gray-300">
  <!-- Main Footer -->
  <div class="container mx-auto px-4 py-12 md:py-16">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 lg:gap-12">
      <!-- Company Info -->
      <div class="lg:col-span-1">
        <div class="flex items-center gap-2 mb-4">
          <div class="w-10 h-10 bg-[var(--slate-blue)] rounded-lg flex items-center justify-center">
            <span class="text-white font-bold text-lg">JZ</span>
          </div>
          <div>
            <span class="font-bold text-white text-sm leading-tight block">JZ Development</span>
            <span class="text-gray-400 text-xs leading-tight block">& Management LLC</span>
          </div>
        </div>
        <p class="text-sm text-gray-400 mb-4">
          Quality craftsmanship and reliable service for all your construction needs on Long Island.
        </p>
        <div class="flex gap-4">
          <!-- Social Icons - Add your social links here -->
          <a
            href="#"
            class="w-10 h-10 rounded-full bg-[var(--slate-blue)] flex items-center justify-center hover:bg-[var(--accent-gold)] transition-colors"
            aria-label="Facebook"
          >
            <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path d="M22 12c0-5.523-4.477-10-10-10S2 6.477 2 12c0 4.991 3.657 9.128 8.438 9.878v-6.987h-2.54V12h2.54V9.797c0-2.506 1.492-3.89 3.777-3.89 1.094 0 2.238.195 2.238.195v2.46h-1.26c-1.243 0-1.63.771-1.63 1.562V12h2.773l-.443 2.89h-2.33v6.988C18.343 21.128 22 16.991 22 12z"/>
            </svg>
          </a>
          <a
            href="#"
            class="w-10 h-10 rounded-full bg-[var(--slate-blue)] flex items-center justify-center hover:bg-[var(--accent-gold)] transition-colors"
            aria-label="Instagram"
          >
            <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path d="M12.315 2c2.43 0 2.784.013 3.808.06 1.064.049 1.791.218 2.427.465a4.902 4.902 0 011.772 1.153 4.902 4.902 0 011.153 1.772c.247.636.416 1.363.465 2.427.048 1.067.06 1.407.06 4.123v.08c0 2.643-.012 2.987-.06 4.043-.049 1.064-.218 1.791-.465 2.427a4.902 4.902 0 01-1.153 1.772 4.902 4.902 0 01-1.772 1.153c-.636.247-1.363.416-2.427.465-1.067.048-1.407.06-4.123.06h-.08c-2.643 0-2.987-.012-4.043-.06-1.064-.049-1.791-.218-2.427-.465a4.902 4.902 0 01-1.772-1.153 4.902 4.902 0 01-1.153-1.772c-.247-.636-.416-1.363-.465-2.427-.047-1.024-.06-1.379-.06-3.808v-.63c0-2.43.013-2.784.06-3.808.049-1.064.218-1.791.465-2.427a4.902 4.902 0 011.153-1.772A4.902 4.902 0 015.45 2.525c.636-.247 1.363-.416 2.427-.465C8.901 2.013 9.256 2 11.685 2h.63zm-.081 1.802h-.468c-2.456 0-2.784.011-3.807.058-.975.045-1.504.207-1.857.344-.467.182-.8.398-1.15.748-.35.35-.566.683-.748 1.15-.137.353-.3.882-.344 1.857-.047 1.023-.058 1.351-.058 3.807v.468c0 2.456.011 2.784.058 3.807.045.975.207 1.504.344 1.857.182.466.399.8.748 1.15.35.35.683.566 1.15.748.353.137.882.3 1.857.344 1.054.048 1.37.058 4.041.058h.08c2.597 0 2.917-.01 3.96-.058.976-.045 1.505-.207 1.858-.344.466-.182.8-.398 1.15-.748.35-.35.566-.683.748-1.15.137-.353.3-.882.344-1.857.048-1.055.058-1.37.058-4.041v-.08c0-2.597-.01-2.917-.058-3.96-.045-.976-.207-1.505-.344-1.858a3.097 3.097 0 00-.748-1.15 3.098 3.098 0 00-1.15-.748c-.353-.137-.882-.3-1.857-.344-1.023-.047-1.351-.058-3.807-.058zM12 6.865a5.135 5.135 0 110 10.27 5.135 5.135 0 010-10.27zm0 1.802a3.333 3.333 0 100 6.666 3.333 3.333 0 000-6.666zm5.338-3.205a1.2 1.2 0 110 2.4 1.2 1.2 0 010-2.4z"/>
            </svg>
          </a>
        </div>
      </div>

      <!-- Services -->
      <div>
        <h3 class="text-white font-bold text-lg mb-4">Our Services</h3>
        <ul class="space-y-2">
          {services.map((service) => (
            <li>
              <a href={service.href} class="text-sm text-gray-400 hover:text-[var(--accent-gold)] transition-colors">
                {service.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Quick Links -->
      <div>
        <h3 class="text-white font-bold text-lg mb-4">Quick Links</h3>
        <ul class="space-y-2">
          {quickLinks.map((link) => (
            <li>
              <a href={link.href} class="text-sm text-gray-400 hover:text-[var(--accent-gold)] transition-colors">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Contact Info -->
      <div>
        <h3 class="text-white font-bold text-lg mb-4">Contact Us</h3>
        <ul class="space-y-3">
          <li>
            <a href="tel:+16316059851" class="flex items-start gap-3 text-sm text-gray-400 hover:text-[var(--accent-gold)] transition-colors">
              <svg class="w-5 h-5 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
              </svg>
              <span>(631) 605-9851</span>
            </a>
          </li>
          <li>
            <a href="mailto:JZambolidevelopment@gmail.com" class="flex items-start gap-3 text-sm text-gray-400 hover:text-[var(--accent-gold)] transition-colors">
              <svg class="w-5 h-5 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
              <span>JZambolidevelopment@gmail.com</span>
            </a>
          </li>
          <li class="flex items-start gap-3 text-sm text-gray-400">
            <svg class="w-5 h-5 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
            <span>Serving All of Long Island<br />Nassau & Suffolk County</span>
          </li>
        </ul>
      </div>
    </div>
  </div>

  <!-- Bottom Bar -->
  <div class="border-t border-gray-700">
    <div class="container mx-auto px-4 py-6">
      <div class="flex flex-col md:flex-row justify-between items-center gap-4">
        <p class="text-sm text-gray-400 text-center md:text-left">
          &copy; {currentYear} JZ Development & Management LLC. All rights reserved.
        </p>
        <div class="flex flex-wrap justify-center gap-4 text-sm text-gray-400">
          <span>Licensed & Insured</span>
          <span class="hidden sm:inline">|</span>
          <span>25+ Years Experience</span>
          <span class="hidden sm:inline">|</span>
          <span>Epoxy Certified</span>
        </div>
      </div>
    </div>
  </div>
</footer>
