---
interface Props {
  title: string;
  subtitle?: string;
  showCTAs?: boolean;
  backgroundImage?: string;
  variant?: 'home' | 'page';
}

const {
  title,
  subtitle,
  showCTAs = true,
  backgroundImage,
  variant = 'home'
} = Astro.props;
---

{variant === 'home' && (
  <section class="relative min-h-[650px] md:min-h-[750px] flex items-center overflow-hidden">
    <!-- Background with Enhanced Gradient -->
    <div class="absolute inset-0 bg-gradient-to-br from-[var(--charcoal)] via-[var(--primary-dark)] to-[var(--charcoal)]">
      <!-- Stock construction image background -->
      <div
        class="absolute inset-0 bg-cover bg-center bg-no-repeat opacity-20"
        style="background-image: url('https://images.unsplash.com/photo-1504307651254-35680f356dfd?auto=format&fit=crop&w=1920&q=80');"
      ></div>
      <!-- Gradient overlay for text legibility -->
      <div class="absolute inset-0 bg-gradient-to-r from-[var(--charcoal)]/90 via-[var(--charcoal)]/70 to-transparent"></div>
      <!-- Decorative geometric pattern -->
      <div class="absolute inset-0 opacity-5">
        <svg class="w-full h-full" xmlns="http://www.w3.org/2000/svg">
          <defs>
            <pattern id="hero-pattern" x="0" y="0" width="60" height="60" patternUnits="userSpaceOnUse">
              <path d="M0 30 L30 0 L60 30 L30 60 Z" fill="none" stroke="white" stroke-width="1"/>
            </pattern>
          </defs>
          <rect fill="url(#hero-pattern)" width="100%" height="100%" />
        </svg>
      </div>
    </div>

    <!-- Animated accent line -->
    <div class="absolute left-0 top-1/4 w-1 h-32 bg-gradient-to-b from-transparent via-[var(--secondary)] to-transparent opacity-60"></div>

    <!-- Content -->
    <div class="relative container mx-auto px-4 py-24 md:py-32">
      <div class="max-w-4xl">
        <!-- Free Estimate Badge -->
        <div class="inline-flex items-center gap-2 mb-6 px-4 py-2 bg-[var(--secondary)]/20 border border-[var(--secondary)]/30 rounded-full backdrop-blur-sm">
          <span class="w-2 h-2 bg-[var(--secondary)] rounded-full animate-pulse"></span>
          <span class="text-[var(--secondary)] text-sm font-semibold uppercase tracking-wider">Free Estimates</span>
        </div>

        <h1 class="mb-6 text-balance leading-tight">
          <span class="block text-white drop-shadow-[0_2px_8px_rgba(0,0,0,0.6)]">{title.split('.')[0]}.</span>
          {title.split('.')[1] && <span class="block text-[var(--secondary)] drop-shadow-[0_2px_4px_rgba(0,0,0,0.4)]">{title.split('.')[1].trim()}</span>}
        </h1>

        {subtitle && (
          <p class="text-xl md:text-2xl text-gray-300 mb-10 max-w-2xl leading-relaxed">
            {subtitle}
          </p>
        )}

        {showCTAs && (
          <div class="flex flex-col sm:flex-row gap-4 mb-8">
            <a href="/contact" class="btn btn-cta text-lg px-10 py-5 rounded-lg group">
              <span>Get Your Free Quote</span>
              <svg class="w-5 h-5 ml-2 transform group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
              </svg>
            </a>
            <a href="tel:+16316059851" class="btn btn-outline text-lg px-8 py-5 rounded-lg backdrop-blur-sm hover:bg-white/10">
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
              </svg>
              (631) 605-9851
            </a>
          </div>
        )}

      </div>
    </div>

    <!-- Scroll indicator -->
    <div class="absolute bottom-8 left-1/2 -translate-x-1/2 hidden md:flex flex-col items-center gap-2 text-white/50 animate-bounce">
      <span class="text-xs uppercase tracking-widest">Scroll</span>
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
      </svg>
    </div>

    <!-- Decorative Bottom Wave -->
    <div class="absolute bottom-0 left-0 right-0">
      <svg class="w-full h-16 md:h-24" viewBox="0 0 1440 100" fill="none" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="none">
        <path d="M0 100V50C240 16.67 480 0 720 0C960 0 1200 16.67 1440 50V100H0Z" fill="var(--light-gray)" />
      </svg>
    </div>
  </section>
)}

{variant === 'page' && (
  <section class="relative py-20 md:py-28 overflow-hidden">
    <!-- Background matching home hero -->
    <div class="absolute inset-0 bg-gradient-to-br from-[var(--charcoal)] via-[var(--primary-dark)] to-[var(--charcoal)]">
      <div
        class="absolute inset-0 bg-cover bg-center bg-no-repeat opacity-15"
        style="background-image: url('https://images.unsplash.com/photo-1503387762-592deb58ef4e?auto=format&fit=crop&w=1920&q=80');"
      ></div>
    </div>

    <!-- Content - clean white text -->
    <div class="relative container mx-auto px-4 text-center">
      <h1 class="text-white mb-4">{title}</h1>
      {subtitle && (
        <p class="text-xl text-gray-200 max-w-2xl mx-auto">
          {subtitle}
        </p>
      )}
    </div>
  </section>
)}
