---
interface Props {
  title: string;
  subtitle?: string;
  showCTAs?: boolean;
  backgroundImage?: string;
  variant?: 'home' | 'page';
}

const {
  title,
  subtitle,
  showCTAs = true,
  backgroundImage,
  variant = 'home'
} = Astro.props;
---

{variant === 'home' && (
  <section class="relative min-h-[600px] md:min-h-[700px] flex items-center">
    <!-- Background with Overlay -->
    <div class="absolute inset-0 bg-gradient-to-br from-[var(--charcoal)] via-[var(--slate-blue-dark)] to-[var(--charcoal)]">
      <!-- Placeholder pattern for when no image is provided -->
      <div class="absolute inset-0 opacity-10">
        <svg class="w-full h-full" xmlns="http://www.w3.org/2000/svg">
          <defs>
            <pattern id="hero-pattern" x="0" y="0" width="40" height="40" patternUnits="userSpaceOnUse">
              <rect x="0" y="0" width="4" height="4" fill="white" />
            </pattern>
          </defs>
          <rect fill="url(#hero-pattern)" width="100%" height="100%" />
        </svg>
      </div>
    </div>

    <!-- Content -->
    <div class="relative container mx-auto px-4 py-20 md:py-28">
      <div class="max-w-3xl">
        <h1 class="text-white mb-6 text-balance">
          {title}
        </h1>
        {subtitle && (
          <p class="text-xl md:text-2xl text-gray-200 mb-8 max-w-2xl">
            {subtitle}
          </p>
        )}
        {showCTAs && (
          <div class="flex flex-col sm:flex-row gap-4">
            <a href="/contact" class="btn btn-secondary text-lg px-8 py-4">
              Request a Quote
            </a>
            <a href="tel:+16316059851" class="btn btn-outline text-lg px-8 py-4">
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
              </svg>
              Call (631) 605-9851
            </a>
          </div>
        )}
      </div>
    </div>

    <!-- Decorative Bottom Wave -->
    <div class="absolute bottom-0 left-0 right-0">
      <svg class="w-full h-16 md:h-24" viewBox="0 0 1440 100" fill="none" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="none">
        <path d="M0 100V50C240 16.67 480 0 720 0C960 0 1200 16.67 1440 50V100H0Z" fill="var(--light-gray)" />
      </svg>
    </div>
  </section>
)}

{variant === 'page' && (
  <section class="relative py-16 md:py-24 bg-gradient-to-br from-[var(--charcoal)] via-[var(--slate-blue-dark)] to-[var(--charcoal)]">
    <!-- Placeholder pattern -->
    <div class="absolute inset-0 opacity-10">
      <svg class="w-full h-full" xmlns="http://www.w3.org/2000/svg">
        <defs>
          <pattern id="page-hero-pattern" x="0" y="0" width="40" height="40" patternUnits="userSpaceOnUse">
            <rect x="0" y="0" width="4" height="4" fill="white" />
          </pattern>
        </defs>
        <rect fill="url(#page-hero-pattern)" width="100%" height="100%" />
      </svg>
    </div>

    <!-- Content -->
    <div class="relative container mx-auto px-4 text-center">
      <h1 class="text-white mb-4">{title}</h1>
      {subtitle && (
        <p class="text-xl text-gray-200 max-w-2xl mx-auto">
          {subtitle}
        </p>
      )}
    </div>
  </section>
)}
