---
interface Badge {
  icon: string;
  label: string;
}

const badges: Badge[] = [
  { icon: 'shield', label: 'Licensed & Insured' },
  { icon: 'clock', label: '25+ Years Experience' },
  { icon: 'certificate', label: 'Epoxy Certified' },
  { icon: 'building', label: 'Est. 2021' },
];
---

<section class="bg-header-texture py-6 md:py-8">
  <div class="container mx-auto px-4">
    <div class="grid grid-cols-2 md:grid-cols-4 gap-4 md:gap-6">
      {badges.map((badge) => (
        <div class="flex items-center justify-center gap-2 md:gap-3 text-center">
          {badge.icon === 'shield' && (
            <svg class="w-6 h-6 md:w-8 md:h-8 text-[var(--slate-blue)] flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
            </svg>
          )}
          {badge.icon === 'clock' && (
            <svg class="w-6 h-6 md:w-8 md:h-8 text-[var(--slate-blue)] flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          )}
          {badge.icon === 'certificate' && (
            <svg class="w-6 h-6 md:w-8 md:h-8 text-[var(--slate-blue)] flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z" />
            </svg>
          )}
          {badge.icon === 'building' && (
            <svg class="w-6 h-6 md:w-8 md:h-8 text-[var(--slate-blue)] flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
            </svg>
          )}
          <span class="text-sm md:text-base font-semibold text-[var(--charcoal)]">{badge.label}</span>
        </div>
      ))}
    </div>
  </div>
</section>
