---
const navLinks = [
  { href: '/', label: 'Home' },
  { href: '/services', label: 'Services' },
  { href: '/projects', label: 'Projects' },
  { href: '/about', label: 'About' },
  { href: '/contact', label: 'Contact' },
];

const currentPath = Astro.url.pathname;
---

<header id="main-header" class="sticky top-0 z-50 bg-white shadow-md transition-all duration-300">
  <div class="container mx-auto px-4">
    <nav class="flex items-center justify-between h-16 md:h-20 lg:justify-between">
      <!-- Mobile Menu Button (left on mobile) -->
      <button
        id="mobile-menu-button"
        class="lg:hidden p-2 text-[var(--charcoal)] hover:text-[var(--primary)] hover:bg-[var(--primary)]/5 rounded-lg transition-all"
        aria-label="Toggle mobile menu"
        aria-expanded="false"
        aria-controls="mobile-menu"
      >
        <svg
          id="menu-icon-open"
          class="w-6 h-6"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
          aria-hidden="true"
        >
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
        <svg
          id="menu-icon-close"
          class="w-6 h-6 hidden"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
          aria-hidden="true"
        >
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>

      <!-- Logo (centered on mobile) -->
      <a href="/" class="flex items-center absolute left-1/2 -translate-x-1/2 lg:static lg:translate-x-0" aria-label="JZ Development & Management LLC - Home">
        <img
          src="/images/colorheader.png"
          alt="JZ Development & Property Management"
          class="h-10 md:h-14 w-auto drop-shadow-md"
        />
      </a>

      <!-- Desktop Navigation -->
      <div class="hidden lg:flex items-center gap-6">
        <ul class="flex items-center gap-1">
          {navLinks.map((link) => (
            <li>
              <a
                href={link.href}
                class={`relative px-4 py-2 font-medium transition-colors rounded-lg hover:bg-[var(--primary)]/5 hover:text-[var(--primary)] ${
                  currentPath === link.href
                    ? 'text-[var(--primary)]'
                    : 'text-[var(--charcoal)]'
                }`}
              >
                {link.label}
                {currentPath === link.href && (
                  <span class="absolute bottom-0 left-1/2 -translate-x-1/2 w-6 h-0.5 bg-[var(--secondary)] rounded-full"></span>
                )}
              </a>
            </li>
          ))}
        </ul>

        <!-- Phone Number -->
        <a
          href="tel:+16316059851"
          class="flex items-center gap-2 text-[var(--charcoal)] hover:text-[var(--primary)] transition-colors font-medium"
        >
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
          </svg>
          <span class="hidden xl:inline">(631) 605-9851</span>
        </a>

        <!-- CTA Button -->
        <a href="/contact" class="btn btn-secondary">
          Free Quote
        </a>
      </div>

    </nav>
  </div>

  <!-- Mobile Menu -->
  <div
    id="mobile-menu"
    class="lg:hidden hidden bg-white border-t border-gray-100"
    aria-hidden="true"
  >
    <div class="container mx-auto px-4 py-4">
      <ul class="flex flex-col gap-1">
        {navLinks.map((link) => (
          <li>
            <a
              href={link.href}
              class={`block py-3 px-4 font-medium transition-all rounded-lg hover:bg-[var(--primary)]/5 hover:text-[var(--primary)] ${
                currentPath === link.href
                  ? 'text-[var(--primary)] bg-[var(--primary)]/5'
                  : 'text-[var(--charcoal)]'
              }`}
            >
              {link.label}
            </a>
          </li>
        ))}
      </ul>
      <div class="mt-4 pt-4 border-t border-gray-100 flex flex-col gap-3">
        <a href="/contact" class="btn btn-secondary w-full text-center justify-center">
          Get Free Quote
        </a>
        <a href="tel:+16316059851" class="btn btn-primary w-full text-center justify-center">
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
          </svg>
          (631) 605-9851
        </a>
      </div>
    </div>
  </div>

  <!-- Mobile menu backdrop -->
  <div
    id="mobile-menu-backdrop"
    class="fixed inset-0 bg-black/50 z-[-1] hidden lg:hidden"
    aria-hidden="true"
  ></div>
</header>

<script>
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');
  const mobileMenuBackdrop = document.getElementById('mobile-menu-backdrop');
  const menuIconOpen = document.getElementById('menu-icon-open');
  const menuIconClose = document.getElementById('menu-icon-close');
  const header = document.getElementById('main-header');

  function closeMenu() {
    if (mobileMenuButton && mobileMenu && menuIconOpen && menuIconClose && mobileMenuBackdrop) {
      mobileMenuButton.setAttribute('aria-expanded', 'false');
      mobileMenu.classList.add('hidden');
      mobileMenu.setAttribute('aria-hidden', 'true');
      mobileMenuBackdrop.classList.add('hidden');
      menuIconOpen.classList.remove('hidden');
      menuIconClose.classList.add('hidden');
      document.body.style.overflow = '';
    }
  }

  function openMenu() {
    if (mobileMenuButton && mobileMenu && menuIconOpen && menuIconClose && mobileMenuBackdrop) {
      mobileMenuButton.setAttribute('aria-expanded', 'true');
      mobileMenu.classList.remove('hidden');
      mobileMenu.setAttribute('aria-hidden', 'false');
      mobileMenuBackdrop.classList.remove('hidden');
      menuIconOpen.classList.add('hidden');
      menuIconClose.classList.remove('hidden');
      document.body.style.overflow = 'hidden';
    }
  }

  if (mobileMenuButton && mobileMenu && menuIconOpen && menuIconClose) {
    mobileMenuButton.addEventListener('click', () => {
      const isExpanded = mobileMenuButton.getAttribute('aria-expanded') === 'true';
      if (isExpanded) {
        closeMenu();
      } else {
        openMenu();
      }
    });

    // Close menu when clicking on a link
    const mobileLinks = mobileMenu.querySelectorAll('a');
    mobileLinks.forEach(link => {
      link.addEventListener('click', closeMenu);
    });

    // Close menu when clicking backdrop
    if (mobileMenuBackdrop) {
      mobileMenuBackdrop.addEventListener('click', closeMenu);
    }

    // Close menu on escape key
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape' && mobileMenuButton.getAttribute('aria-expanded') === 'true') {
        closeMenu();
      }
    });
  }

  // Header scroll effect
  let lastScrollY = 0;
  window.addEventListener('scroll', () => {
    const scrollY = window.scrollY;
    if (header) {
      if (scrollY > 100) {
        header.classList.add('shadow-lg');
      } else {
        header.classList.remove('shadow-lg');
      }
    }
    lastScrollY = scrollY;
  }, { passive: true });
</script>
