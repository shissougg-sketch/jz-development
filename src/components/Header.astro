---
const navLinks = [
  { href: '/', label: 'Home' },
  { href: '/services', label: 'Services' },
  { href: '/projects', label: 'Projects' },
  { href: '/about', label: 'About' },
  { href: '/contact', label: 'Contact' },
];

const currentPath = Astro.url.pathname;
---

<header id="main-header" class="sticky top-0 z-50 bg-white shadow-md transition-all duration-300">
  <div class="container mx-auto px-4">
    <nav class="flex items-center justify-between h-16 md:h-20 lg:justify-between">
      <!-- Mobile Menu Button (left on mobile) -->
      <button
        id="mobile-menu-button"
        class="lg:hidden p-2 text-[var(--charcoal)] hover:text-[var(--primary)] hover:bg-[var(--primary)]/5 rounded-lg transition-all"
        aria-label="Toggle mobile menu"
        aria-expanded="false"
        aria-controls="mobile-menu"
      >
        <svg
          id="menu-icon-open"
          class="w-6 h-6"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
          aria-hidden="true"
        >
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
        <svg
          id="menu-icon-close"
          class="w-6 h-6 hidden"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
          aria-hidden="true"
        >
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>

      <!-- Logo (centered on mobile) -->
      <a href="/" class="flex items-center absolute left-1/2 -translate-x-1/2 lg:static lg:translate-x-0" aria-label="JZ Development & Management LLC - Home">
        <img
          src="/images/colorheader.png"
          alt="JZ Development & Property Management"
          class="h-10 md:h-14 w-auto drop-shadow-[0_4px_6px_rgba(0,0,0,0.3)]"
        />
      </a>

      <!-- Desktop Navigation -->
      <div class="hidden lg:flex items-center gap-6">
        <ul class="flex items-center gap-1">
          {navLinks.map((link) => (
            <li>
              <a
                href={link.href}
                class={`relative px-4 py-2 font-medium transition-colors rounded-lg hover:bg-[var(--primary)]/5 hover:text-[var(--primary)] ${
                  currentPath === link.href
                    ? 'text-[var(--primary)]'
                    : 'text-[var(--charcoal)]'
                }`}
              >
                {link.label}
                {currentPath === link.href && (
                  <span class="absolute bottom-0 left-1/2 -translate-x-1/2 w-6 h-0.5 bg-[var(--secondary)] rounded-full"></span>
                )}
              </a>
            </li>
          ))}
        </ul>

        <!-- Phone Number -->
        <a
          href="tel:+16316059851"
          class="flex items-center gap-2 text-[var(--charcoal)] hover:text-[var(--primary)] transition-colors font-medium"
        >
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
          </svg>
          <span class="hidden xl:inline">(631) 605-9851</span>
        </a>

        <!-- CTA Button -->
        <a href="/contact#quote-form-container" class="btn btn-secondary">
          Free Quote
        </a>
      </div>

    </nav>
  </div>

  <!-- Mobile Menu Backdrop -->
  <div
    id="mobile-menu-backdrop"
    class="fixed inset-0 bg-black/0 z-40 hidden lg:hidden transition-colors duration-300"
    aria-hidden="true"
  ></div>

  <!-- Mobile Menu Drawer -->
  <div
    id="mobile-menu"
    class="fixed top-0 left-0 h-full w-[85%] max-w-[320px] bg-white z-50 lg:hidden transform -translate-x-full transition-transform duration-300 ease-out shadow-2xl"
    aria-hidden="true"
  >
    <!-- Drawer Header -->
    <div class="flex items-center justify-center p-4 border-b border-gray-100 relative">
      <a href="/" class="flex items-center">
        <img
          src="/images/colorheader.png"
          alt="JZ Development"
          class="h-10 w-auto"
        />
      </a>
      <button
        id="mobile-menu-close"
        class="absolute right-4 p-2 text-gray-500 hover:text-[var(--primary)] hover:bg-gray-100 rounded-lg transition-colors"
        aria-label="Close menu"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>
    </div>

    <!-- Drawer Content -->
    <div class="flex flex-col h-[calc(100%-72px)] overflow-y-auto pb-20">
      <!-- Navigation Links -->
      <nav class="flex-1 px-4 py-6">
        <ul class="flex flex-col gap-1">
          {navLinks.map((link) => (
            <li>
              <a
                href={link.href}
                class={`flex items-center py-3 px-4 font-medium text-lg transition-all rounded-lg hover:bg-[var(--primary)]/10 hover:text-[var(--primary)] ${
                  currentPath === link.href
                    ? 'text-[var(--primary)] bg-[var(--primary)]/10 border-l-4 border-[var(--primary)]'
                    : 'text-[var(--charcoal)]'
                }`}
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </nav>

      <!-- Business Info -->
      <div class="px-4 pb-6 text-sm text-gray-600">
        <!-- Separator -->
        <div class="border-t border-gray-200 mb-4"></div>

        <!-- Business Hours -->
        <div class="flex items-center gap-2 mb-3">
          <svg class="w-4 h-4 text-[var(--primary)]" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <span>Mon-Fri 7AM-6PM</span>
        </div>

        <!-- Separator -->
        <div class="border-t border-gray-100 my-3"></div>

        <!-- Service Area -->
        <div class="flex items-center gap-2 mb-3">
          <svg class="w-4 h-4 text-[var(--primary)]" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
          </svg>
          <span>Serving Nassau & Suffolk County</span>
        </div>

        <!-- Separator -->
        <div class="border-t border-gray-100 my-3"></div>

        <!-- Social Media -->
        <div class="flex items-center gap-4">
          <span class="text-gray-500">Follow us:</span>
          <a href="https://www.facebook.com/JZDevelopmentLLC" target="_blank" rel="noopener noreferrer" class="text-[var(--primary)] hover:text-[var(--primary-dark)] transition-colors" aria-label="Facebook">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
            </svg>
          </a>
          <a href="https://www.instagram.com/jzdevelopment_and_management" target="_blank" rel="noopener noreferrer" class="text-[var(--primary)] hover:text-[var(--primary-dark)] transition-colors" aria-label="Instagram">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path d="M12.315 2c2.43 0 2.784.013 3.808.06 1.064.049 1.791.218 2.427.465a4.902 4.902 0 011.772 1.153 4.902 4.902 0 011.153 1.772c.247.636.416 1.363.465 2.427.048 1.067.06 1.407.06 4.123v.08c0 2.643-.012 2.987-.06 4.043-.049 1.064-.218 1.791-.465 2.427a4.902 4.902 0 01-1.153 1.772 4.902 4.902 0 01-1.772 1.153c-.636.247-1.363.416-2.427.465-1.067.048-1.407.06-4.123.06h-.08c-2.643 0-2.987-.012-4.043-.06-1.064-.049-1.791-.218-2.427-.465a4.902 4.902 0 01-1.772-1.153 4.902 4.902 0 01-1.153-1.772c-.247-.636-.416-1.363-.465-2.427-.047-1.024-.06-1.379-.06-3.808v-.63c0-2.43.013-2.784.06-3.808.049-1.064.218-1.791.465-2.427a4.902 4.902 0 011.153-1.772A4.902 4.902 0 015.45 2.525c.636-.247 1.363-.416 2.427-.465C8.901 2.013 9.256 2 11.685 2h.63zm-.081 1.802h-.468c-2.456 0-2.784.011-3.807.058-.975.045-1.504.207-1.857.344-.467.182-.8.398-1.15.748-.35.35-.566.683-.748 1.15-.137.353-.3.882-.344 1.857-.047 1.023-.058 1.351-.058 3.807v.468c0 2.456.011 2.784.058 3.807.045.975.207 1.504.344 1.857.182.466.399.8.748 1.15.35.35.683.566 1.15.748.353.137.882.3 1.857.344 1.054.048 1.37.058 4.041.058h.08c2.597 0 2.917-.01 3.96-.058.976-.045 1.505-.207 1.858-.344.466-.182.8-.398 1.15-.748.35-.35.566-.683.748-1.15.137-.353.3-.882.344-1.857.048-1.055.058-1.37.058-4.041v-.08c0-2.597-.01-2.917-.058-3.96-.045-.976-.207-1.505-.344-1.858a3.097 3.097 0 00-.748-1.15 3.098 3.098 0 00-1.15-.748c-.353-.137-.882-.3-1.857-.344-1.023-.047-1.351-.058-3.807-.058zM12 6.865a5.135 5.135 0 110 10.27 5.135 5.135 0 010-10.27zm0 1.802a3.333 3.333 0 100 6.666 3.333 3.333 0 000-6.666zm5.338-3.205a1.2 1.2 0 110 2.4 1.2 1.2 0 010-2.4z"/>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </div>
</header>

<script>
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenuCloseBtn = document.getElementById('mobile-menu-close');
  const mobileMenu = document.getElementById('mobile-menu');
  const mobileMenuBackdrop = document.getElementById('mobile-menu-backdrop');
  const menuIconOpen = document.getElementById('menu-icon-open');
  const menuIconClose = document.getElementById('menu-icon-close');
  const header = document.getElementById('main-header');

  function closeMenu() {
    if (mobileMenuButton && mobileMenu && menuIconOpen && menuIconClose && mobileMenuBackdrop) {
      mobileMenuButton.setAttribute('aria-expanded', 'false');
      // Slide out drawer
      mobileMenu.classList.add('-translate-x-full');
      mobileMenu.setAttribute('aria-hidden', 'true');
      // Fade out backdrop
      mobileMenuBackdrop.classList.remove('bg-black/50');
      mobileMenuBackdrop.classList.add('bg-black/0');
      // Hide backdrop after transition
      setTimeout(() => {
        mobileMenuBackdrop.classList.add('hidden');
      }, 300);
      menuIconOpen.classList.remove('hidden');
      menuIconClose.classList.add('hidden');
      document.body.style.overflow = '';
    }
  }

  function openMenu() {
    if (mobileMenuButton && mobileMenu && menuIconOpen && menuIconClose && mobileMenuBackdrop) {
      mobileMenuButton.setAttribute('aria-expanded', 'true');
      // Show backdrop first
      mobileMenuBackdrop.classList.remove('hidden');
      // Trigger reflow to enable transition
      mobileMenuBackdrop.offsetHeight;
      // Fade in backdrop
      mobileMenuBackdrop.classList.remove('bg-black/0');
      mobileMenuBackdrop.classList.add('bg-black/50');
      // Slide in drawer
      mobileMenu.classList.remove('-translate-x-full');
      mobileMenu.setAttribute('aria-hidden', 'false');
      menuIconOpen.classList.add('hidden');
      menuIconClose.classList.remove('hidden');
      document.body.style.overflow = 'hidden';
    }
  }

  if (mobileMenuButton && mobileMenu && menuIconOpen && menuIconClose) {
    // Toggle menu on hamburger click
    mobileMenuButton.addEventListener('click', () => {
      const isExpanded = mobileMenuButton.getAttribute('aria-expanded') === 'true';
      if (isExpanded) {
        closeMenu();
      } else {
        openMenu();
      }
    });

    // Close button inside drawer
    if (mobileMenuCloseBtn) {
      mobileMenuCloseBtn.addEventListener('click', closeMenu);
    }

    // Close menu when clicking on a link
    const mobileLinks = mobileMenu.querySelectorAll('a');
    mobileLinks.forEach(link => {
      link.addEventListener('click', closeMenu);
    });

    // Close menu when clicking backdrop
    if (mobileMenuBackdrop) {
      mobileMenuBackdrop.addEventListener('click', closeMenu);
    }

    // Close menu on escape key
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape' && mobileMenuButton.getAttribute('aria-expanded') === 'true') {
        closeMenu();
      }
    });
  }

  // Header scroll effect
  let lastScrollY = 0;
  window.addEventListener('scroll', () => {
    const scrollY = window.scrollY;
    if (header) {
      if (scrollY > 100) {
        header.classList.add('shadow-lg');
      } else {
        header.classList.remove('shadow-lg');
      }
    }
    lastScrollY = scrollY;
  }, { passive: true });

</script>
