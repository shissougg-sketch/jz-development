---
interface Props {
  title?: string;
  description?: string;
  variant?: 'default' | 'dark' | 'split';
}

const {
  title = "Ready to Start Your Project?",
  description = "Get a free quote for your next construction project. We're here to bring your vision to life with quality craftsmanship and reliable service.",
  variant = 'default'
} = Astro.props;
---

{variant === 'default' && (
  <section class="section bg-[var(--slate-blue)]">
    <div class="container mx-auto px-4 text-center">
      <h2 class="text-white mb-4">{title}</h2>
      <p class="text-gray-200 max-w-2xl mx-auto mb-8">
        {description}
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/contact" class="btn btn-secondary">
          Request a Free Quote
        </a>
        <a href="tel:+16316059851" class="btn btn-outline">
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
          </svg>
          (631) 605-9851
        </a>
      </div>
    </div>
  </section>
)}

{variant === 'dark' && (
  <section class="section bg-[var(--charcoal)]">
    <div class="container mx-auto px-4 text-center">
      <h2 class="text-white mb-4">{title}</h2>
      <p class="text-gray-300 max-w-2xl mx-auto mb-8">
        {description}
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/contact" class="btn btn-secondary">
          Request a Free Quote
        </a>
        <a href="tel:+16316059851" class="btn btn-outline">
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
          </svg>
          (631) 605-9851
        </a>
      </div>
    </div>
  </section>
)}

{variant === 'split' && (
  <section class="section bg-[var(--light-gray)]">
    <div class="container mx-auto px-4">
      <div class="grid md:grid-cols-2 gap-8 md:gap-12 items-center">
        <!-- Left: Contact Info -->
        <div>
          <h2 class="text-[var(--charcoal)] mb-4">{title}</h2>
          <p class="text-gray-600 mb-6">
            {description}
          </p>
          <div class="space-y-4">
            <a href="tel:+16316059851" class="flex items-center gap-3 text-[var(--charcoal)] hover:text-[var(--slate-blue)] transition-colors">
              <div class="w-12 h-12 rounded-full bg-[var(--slate-blue)] flex items-center justify-center">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
              </div>
              <div>
                <p class="text-sm text-gray-500">Call Us</p>
                <p class="font-semibold">(631) 605-9851</p>
              </div>
            </a>
            <a href="mailto:JZamboliDevelopment@gmail.com" class="flex items-center gap-3 text-[var(--charcoal)] hover:text-[var(--slate-blue)] transition-colors">
              <div class="w-12 h-12 rounded-full bg-[var(--slate-blue)] flex items-center justify-center">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
              </div>
              <div>
                <p class="text-sm text-gray-500">Email Us</p>
                <p class="font-semibold">JZamboliDevelopment@gmail.com</p>
              </div>
            </a>
          </div>
        </div>

        <!-- Right: Quick Contact Form -->
        <div class="bg-white rounded-xl shadow-lg p-6 md:p-8">
          <h3 class="text-xl font-bold text-[var(--charcoal)] mb-4">Get a Free Quote</h3>
          <form id="quick-quote-form" class="space-y-4">
            <div>
              <label for="cta-name" class="block text-sm font-medium text-gray-700 mb-1">Name</label>
              <input
                type="text"
                id="cta-name"
                name="name"
                required
                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[var(--slate-blue)] focus:border-transparent"
              />
            </div>
            <div>
              <label for="cta-phone" class="block text-sm font-medium text-gray-700 mb-1">Phone</label>
              <input
                type="tel"
                id="cta-phone"
                name="phone"
                required
                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[var(--slate-blue)] focus:border-transparent"
              />
            </div>
            <div>
              <label for="cta-message" class="block text-sm font-medium text-gray-700 mb-1">Project Description</label>
              <textarea
                id="cta-message"
                name="description"
                rows="3"
                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[var(--slate-blue)] focus:border-transparent resize-none"
              ></textarea>
            </div>
            <button type="submit" class="btn btn-primary w-full">
              Continue to Full Quote
            </button>
          </form>
        </div>
      </div>
    </div>
  </section>
)}

<script>
  const quickForm = document.getElementById('quick-quote-form') as HTMLFormElement | null;

  function isValidPhone(phone: string): boolean {
    const digitsOnly = phone.replace(/\D/g, '');
    return digitsOnly.length >= 10;
  }

  if (quickForm) {
    quickForm.addEventListener('submit', (e) => {
      e.preventDefault();

      const nameInput = quickForm.querySelector('[name="name"]') as HTMLInputElement;
      const phoneInput = quickForm.querySelector('[name="phone"]') as HTMLInputElement;
      const descriptionInput = quickForm.querySelector('[name="description"]') as HTMLTextAreaElement;

      // Validate phone
      const errorId = 'cta-phone-error';
      let errorEl = document.getElementById(errorId);

      if (!isValidPhone(phoneInput.value)) {
        phoneInput.classList.add('border-red-500');
        if (!errorEl) {
          errorEl = document.createElement('p');
          errorEl.id = errorId;
          errorEl.className = 'text-red-500 text-sm mt-1';
          errorEl.textContent = 'Please enter a valid phone number (at least 10 digits)';
          phoneInput.parentElement?.appendChild(errorEl);
        }
        phoneInput.focus();
        return;
      }

      phoneInput.classList.remove('border-red-500');
      errorEl?.remove();

      const params = new URLSearchParams();
      if (nameInput.value) params.set('name', nameInput.value);
      if (phoneInput.value) params.set('phone', phoneInput.value);
      if (descriptionInput.value) params.set('description', descriptionInput.value);

      window.location.href = `/contact?${params.toString()}#quote-form-container`;
    });
  }
</script>
