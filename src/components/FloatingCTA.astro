---
// Fixed bottom action bar for mobile
---

<!-- Fixed Bottom Bar for Mobile -->
<div id="mobile-action-bar" class="fixed bottom-0 left-0 right-0 z-50 md:hidden bg-white border-t border-gray-200 shadow-[0_-4px_20px_rgba(0,0,0,0.1)] safe-area-bottom">
  <div class="flex">
    <a
      href="tel:+16316059851"
      class="flex-1 flex items-center justify-center gap-2 py-4 text-[var(--primary)] font-semibold border-r border-gray-200 active:bg-gray-50 transition-colors"
    >
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
      </svg>
      <span>Call Now</span>
    </a>
    <a
      href="/contact"
      class="flex-1 flex items-center justify-center gap-2 py-4 bg-[var(--secondary)] text-white font-semibold active:bg-[var(--secondary-dark)] transition-colors"
    >
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
      </svg>
      <span>Free Quote</span>
    </a>
  </div>
</div>

<!-- Desktop floating quote button -->
<div id="floating-cta-desktop" class="fixed bottom-8 right-8 z-50 hidden md:block opacity-0 translate-y-4 transition-all duration-300">
  <a
    href="/contact"
    class="flex items-center gap-2 px-6 py-4 bg-gradient-to-r from-[var(--secondary)] to-[var(--secondary-dark)] text-white font-bold rounded-full shadow-lg hover:shadow-xl transition-all floating-cta group"
  >
    <span>Get Free Quote</span>
    <svg class="w-5 h-5 transform group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
    </svg>
  </a>
</div>

<style>
  /* Safe area for phones with home indicator */
  .safe-area-bottom {
    padding-bottom: env(safe-area-inset-bottom, 0);
  }
</style>

<script>
  // Show desktop floating CTA after scrolling
  const floatingCTADesktop = document.getElementById('floating-cta-desktop');

  let ticking = false;

  function updateFloatingCTA() {
    const scrollY = window.scrollY;
    const showThreshold = 400;

    if (floatingCTADesktop) {
      if (scrollY > showThreshold) {
        floatingCTADesktop.classList.remove('opacity-0', 'translate-y-4');
        floatingCTADesktop.classList.add('opacity-100', 'translate-y-0');
      } else {
        floatingCTADesktop.classList.add('opacity-0', 'translate-y-4');
        floatingCTADesktop.classList.remove('opacity-100', 'translate-y-0');
      }
    }

    ticking = false;
  }

  function onScroll() {
    if (!ticking) {
      window.requestAnimationFrame(updateFloatingCTA);
      ticking = true;
    }
  }

  window.addEventListener('scroll', onScroll, { passive: true });
</script>
