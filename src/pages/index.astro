---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Hero from '../components/Hero.astro';
import TrustBadges from '../components/TrustBadges.astro';
import ServiceCard from '../components/ServiceCard.astro';
import TestimonialStrip from '../components/TestimonialStrip.astro';
import CTASection from '../components/CTASection.astro';

const services = [
  {
    title: "Masonry & Stonework",
    description: "Expert brick, stone, and veneer installation for stunning exteriors and interiors.",
    href: "/services#masonry",
    icon: "brick"
  },
  {
    title: "Foundations & Concrete",
    description: "Solid foundations, slabs, driveways, and structural concrete work.",
    href: "/services#foundations",
    icon: "foundation"
  },
  {
    title: "Full Gut Renovations",
    description: "Complete interior transformations from demo to final finishes.",
    href: "/services#renovations",
    icon: "renovation"
  },
  {
    title: "Kitchens & Bathrooms",
    description: "Custom kitchen and bathroom remodeling with quality craftsmanship.",
    href: "/services#kitchens-bathrooms",
    icon: "kitchen"
  },
  {
    title: "Epoxy Flooring",
    description: "Durable, beautiful epoxy floor coatings for garages and commercial spaces.",
    href: "/services#epoxy",
    icon: "epoxy"
  },
  {
    title: "Exterior Work",
    description: "Siding, roofing, decks, and complete exterior renovations.",
    href: "/services#exterior",
    icon: "exterior"
  },
  {
    title: "New Construction",
    description: "Ground-up residential and commercial construction projects.",
    href: "/services#new-construction",
    icon: "construction"
  }
];

const featuredProjects = [
  { title: "Kitchen Renovation", category: "Interior" },
  { title: "Stone Veneer Installation", category: "Masonry" },
  { title: "Epoxy Garage Floor", category: "Epoxy" },
  { title: "Full Home Renovation", category: "Renovation" },
  { title: "New Construction", category: "New Build" },
  { title: "Bathroom Remodel", category: "Interior" }
];
---

<BaseLayout
  title="Home"
  description="JZ Development & Management LLC is a trusted Long Island general contractor specializing in masonry, renovations, kitchens, bathrooms, epoxy flooring, and new construction. Licensed, insured, with 25+ years experience. Serving Nassau & Suffolk County."
>
  <Header slot="header" />

  <!-- Hero Section -->
  <Hero
    title="Quality Craftsmanship. Lasting Results."
    subtitle="Long Island's trusted general contractor for masonry, renovations, and new construction. 25+ years of experience delivering exceptional results."
  />

  <!-- Trust Badges -->
  <TrustBadges />

  <!-- Services Section -->
  <section class="section bg-white">
    <div class="container mx-auto px-4">
      <div class="text-center mb-12">
        <h2 class="text-[var(--charcoal)] mb-4">Our Services</h2>
        <p class="text-gray-600 max-w-2xl mx-auto">
          From foundation to finish, we deliver comprehensive construction services with the quality and attention to detail your project deserves.
        </p>
      </div>

      <div class="grid sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
        {services.map((service) => (
          <ServiceCard
            title={service.title}
            description={service.description}
            href={service.href}
            icon={service.icon}
          />
        ))}
      </div>

      <div class="text-center mt-10">
        <a href="/services" class="btn btn-primary">
          View All Services
        </a>
      </div>
    </div>
  </section>

  <!-- Featured Projects Section -->
  <section class="section bg-[var(--light-gray)]">
    <div class="container mx-auto px-4">
      <div class="text-center mb-12">
        <h2 class="text-[var(--charcoal)] mb-4">Featured Projects</h2>
        <p class="text-gray-600 max-w-2xl mx-auto">
          Browse our recent work and see the quality craftsmanship we bring to every project.
        </p>
      </div>

      <div class="grid grid-cols-2 md:grid-cols-3 gap-4 md:gap-6">
        {featuredProjects.map((project) => (
          <div class="group relative aspect-square rounded-xl overflow-hidden bg-gradient-to-br from-[var(--medium-gray)] to-[var(--light-gray)]">
            <!-- Placeholder content -->
            <div class="absolute inset-0 flex flex-col items-center justify-center p-4 text-center">
              <svg class="w-12 h-12 text-[var(--slate-blue)] opacity-30 mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
              </svg>
              <span class="text-xs text-gray-500">Photo Coming Soon</span>
            </div>

            <!-- Hover overlay -->
            <div class="absolute inset-0 bg-gradient-to-t from-[var(--charcoal)] via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300">
              <div class="absolute bottom-0 left-0 right-0 p-4">
                <p class="text-white font-semibold">{project.title}</p>
                <p class="text-gray-300 text-sm">{project.category}</p>
              </div>
            </div>
          </div>
        ))}
      </div>

      <div class="text-center mt-10">
        <a href="/projects" class="btn btn-primary">
          View All Projects
        </a>
      </div>
    </div>
  </section>

  <!-- About Preview Section -->
  <section class="section bg-white">
    <div class="container mx-auto px-4">
      <div class="grid md:grid-cols-2 gap-8 md:gap-12 items-center">
        <!-- Image Placeholder -->
        <div class="aspect-video md:aspect-square rounded-xl overflow-hidden bg-gradient-to-br from-[var(--medium-gray)] to-[var(--light-gray)] flex items-center justify-center">
          <div class="text-center">
            <svg class="w-16 h-16 text-[var(--slate-blue)] opacity-30 mx-auto mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
            </svg>
            <span class="text-sm text-gray-500">Team Photo Coming Soon</span>
          </div>
        </div>

        <!-- Content -->
        <div>
          <h2 class="text-[var(--charcoal)] mb-4">About JZ Development</h2>
          <p class="text-gray-600 mb-4">
            JZ Development & Management LLC is a locally owned and operated general contracting company serving all of Long Island. With over 25 years of combined experience in the construction industry, we bring expertise, reliability, and a commitment to quality to every project.
          </p>
          <p class="text-gray-600 mb-6">
            From small repairs to complete renovations and new construction, we treat every job with the same level of professionalism and attention to detail. Our goal is simple: deliver exceptional results that exceed your expectations.
          </p>

          <div class="flex flex-wrap gap-4 mb-6">
            <div class="flex items-center gap-2">
              <svg class="w-5 h-5 text-[var(--accent-gold)]" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
              </svg>
              <span class="text-sm font-medium">Licensed & Insured</span>
            </div>
            <div class="flex items-center gap-2">
              <svg class="w-5 h-5 text-[var(--accent-gold)]" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
              </svg>
              <span class="text-sm font-medium">25+ Years Experience</span>
            </div>
            <div class="flex items-center gap-2">
              <svg class="w-5 h-5 text-[var(--accent-gold)]" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
              </svg>
              <span class="text-sm font-medium">Free Estimates</span>
            </div>
          </div>

          <a href="/about" class="btn btn-primary">
            Learn More About Us
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Testimonials -->
  <TestimonialStrip />

  <!-- CTA Section -->
  <CTASection variant="split" />

  <Footer slot="footer" />
</BaseLayout>
