---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Hero from '../components/Hero.astro';
import ServiceCard from '../components/ServiceCard.astro';
import TestimonialStrip from '../components/TestimonialStrip.astro';
import CTASection from '../components/CTASection.astro';

const services = [
  {
    title: "Full Home Renovations",
    description: "Complete interior and exterior renovations, from demolition to final finishes.",
    href: "/services#renovations",
    icon: "renovation",
    image: "/images/Services/one.webp"
  },
  {
    title: "Kitchen & Bathroom Remodeling",
    description: "Custom kitchens and bathrooms designed for function, comfort, and long-term value.",
    href: "/services#kitchens-bathrooms",
    icon: "kitchen",
    image: "/images/Services/two.webp"
  },
  {
    title: "Masonry & Stonework",
    description: "Expert brick, block, and stone craftsmanship for structural and decorative projects.",
    href: "/services#masonry",
    icon: "brick",
    image: "/images/Services/three.webp"
  },
  {
    title: "Exterior Improvements & Stone Veneers",
    description: "Exterior upgrades including stone veneers, facades, walkways, and entry features.",
    href: "/services#exterior",
    icon: "exterior",
    image: "/images/Services/four.webp"
  },
  {
    title: "Concrete & Foundations",
    description: "Foundations, slabs, footings, and structural concrete work done right the first time.",
    href: "/services#foundations",
    icon: "foundation",
    image: "/images/Services/five.webp"
  },
  {
    title: "Epoxy Flooring",
    description: "Durable, seamless epoxy flooring for garages, basements, and utility spaces.",
    href: "/services#epoxy",
    icon: "epoxy",
    image: "/images/Services/six.webp"
  },
  {
    title: "New Construction",
    description: "Complete new home construction from foundation to finish.",
    href: "/services#new-construction",
    icon: "construction",
    image: "/images/Services/seven.webp"
  },
  {
    title: "Property Maintenance & Structural Repairs",
    description: "Repairs, structural fixes, and maintenance for long-term property care.",
    href: "/services#maintenance",
    icon: "maintenance",
    image: "/images/Services/eight.webp"
  }
];

const featuredProjects = [
  {
    title: "Kitchen Renovation",
    category: "Interior",
    image: "https://images.unsplash.com/photo-1556909114-f6e7ad7d3136?auto=format&fit=crop&w=600&q=80"
  },
  {
    title: "Stone Veneer Installation",
    category: "Masonry",
    image: "https://images.unsplash.com/photo-1558618666-fcd25c85cd64?auto=format&fit=crop&w=600&q=80"
  },
  {
    title: "Epoxy Garage Floor",
    category: "Epoxy",
    image: "https://images.unsplash.com/photo-1558618047-3c8c76ca7d13?auto=format&fit=crop&w=600&q=80"
  },
  {
    title: "Full Home Renovation",
    category: "Renovation",
    image: "https://images.unsplash.com/photo-1581858726788-75bc0f6a952d?auto=format&fit=crop&w=600&q=80"
  },
  {
    title: "New Construction",
    category: "New Build",
    image: "https://images.unsplash.com/photo-1503387762-592deb58ef4e?auto=format&fit=crop&w=600&q=80"
  },
  {
    title: "Bathroom Remodel",
    category: "Interior",
    image: "https://images.unsplash.com/photo-1552321554-5fefe8c9ef14?auto=format&fit=crop&w=600&q=80"
  }
];
---

<BaseLayout
  title="Home"
  description="JZ Development & Management LLC is a trusted Long Island general contractor specializing in masonry, renovations, kitchens, bathrooms, epoxy flooring, and new construction. Licensed, insured, with 25+ years experience. Serving Nassau & Suffolk County."
>
  <Header slot="header" />

  <!-- Hero Section -->
  <Hero
    title="Quality Craftsmanship. Lasting Results."
    subtitle="Long Island's trusted general contractor for masonry, renovations, and new construction. 25+ years of experience delivering exceptional results."
  />

  <!-- Services Section -->
  <section class="section bg-white">
    <div class="container mx-auto px-4">
      <div class="text-center mb-12">
        <h2 class="text-[var(--charcoal)] mb-4 section-title">Our Services</h2>
        <p class="text-gray-600 max-w-2xl mx-auto">
          From foundation to finish, we deliver comprehensive construction services with the quality and attention to detail your project deserves.
        </p>
      </div>

      <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4 md:gap-6">
        {services.map((service) => (
          <div class="service-grid-item">
            <ServiceCard
              title={service.title}
              description={service.description}
              href={service.href}
              icon={service.icon}
              image={service.image}
              compact={true}
            />
          </div>
        ))}
      </div>

      <div class="text-center mt-10">
        <a href="/services" class="btn btn-primary">
          View All Services
        </a>
      </div>
    </div>
  </section>

  <!-- Featured Projects Section -->
  <section class="section bg-[var(--light-gray)]">
    <div class="container mx-auto px-4">
      <div class="text-center mb-12">
        <h2 class="text-[var(--charcoal)] mb-4 section-title">Featured Projects</h2>
        <p class="text-gray-600 max-w-2xl mx-auto">
          Browse our recent work and see the quality craftsmanship we bring to every project.
        </p>
      </div>

      <div class="grid grid-cols-2 md:grid-cols-3 gap-4 md:gap-6">
        {featuredProjects.map((project) => (
          <div class="group relative aspect-square rounded-xl overflow-hidden shadow-lg card-hover">
            <!-- Project image -->
            <img
              src={project.image}
              alt={project.title}
              class="w-full h-full object-cover transform group-hover:scale-110 transition-transform duration-500"
              loading="lazy"
            />

            <!-- Gradient overlay -->
            <div class="absolute inset-0 bg-gradient-to-t from-[var(--charcoal)] via-[var(--charcoal)]/20 to-transparent opacity-60 group-hover:opacity-80 transition-opacity duration-300"></div>

            <!-- Content always visible -->
            <div class="absolute bottom-0 left-0 right-0 p-4 md:p-5">
              <span class="inline-block px-2 py-1 text-xs font-semibold text-[var(--secondary)] bg-white/10 backdrop-blur-sm rounded mb-2">{project.category}</span>
              <p class="text-white font-bold text-lg">{project.title}</p>
            </div>

            <!-- View project indicator on hover -->
            <div class="absolute inset-0 flex items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity duration-300">
              <span class="px-4 py-2 bg-[var(--secondary)] text-white font-semibold rounded-lg transform -translate-y-4 group-hover:translate-y-0 transition-transform duration-300">
                View Project
              </span>
            </div>
          </div>
        ))}
      </div>

      <div class="text-center mt-10">
        <a href="/projects" class="btn btn-primary">
          View All Projects
        </a>
      </div>
    </div>
  </section>

  <!-- About Preview Section -->
  <section class="section bg-white">
    <div class="container mx-auto px-4">
      <div class="grid md:grid-cols-2 gap-8 md:gap-12 items-center">
        <!-- Image Placeholder -->
        <div class="aspect-video md:aspect-square rounded-xl overflow-hidden bg-gradient-to-br from-[var(--primary)] to-[var(--primary-dark)] flex items-center justify-center">
          <div class="text-center p-8">
            <svg class="w-20 h-20 text-white opacity-40 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
            </svg>
            <span class="text-white/70 font-medium">JZ Development</span>
            <p class="text-white/50 text-sm mt-1">Est. 2021</p>
          </div>
        </div>

        <!-- Content -->
        <div>
          <h2 class="text-[var(--charcoal)] mb-4 section-title">About JZ Development</h2>
          <p class="text-gray-600 mb-4">
            JZ Development & Management LLC is a locally owned and operated general contracting company serving all of Long Island. With over 25 years of combined experience in the construction industry, we bring expertise, reliability, and a commitment to quality to every project.
          </p>
          <p class="text-gray-600 mb-6">
            From small repairs to complete renovations and new construction, we treat every job with the same level of professionalism and attention to detail. Our goal is simple: deliver exceptional results that exceed your expectations.
          </p>

          <div class="flex flex-wrap gap-4 mb-6">
            <div class="flex items-center gap-2">
              <svg class="w-5 h-5 text-[var(--accent-gold)]" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
              </svg>
              <span class="text-sm font-medium">Licensed & Insured</span>
            </div>
            <div class="flex items-center gap-2">
              <svg class="w-5 h-5 text-[var(--accent-gold)]" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
              </svg>
              <span class="text-sm font-medium">25+ Years Experience</span>
            </div>
            <div class="flex items-center gap-2">
              <svg class="w-5 h-5 text-[var(--accent-gold)]" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
              </svg>
              <span class="text-sm font-medium">Free Estimates</span>
            </div>
          </div>

          <a href="/about" class="btn btn-primary">
            Learn More About Us
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Testimonials -->
  <TestimonialStrip />

  <!-- CTA Section -->
  <CTASection variant="split" />

  <Footer slot="footer" />
</BaseLayout>
