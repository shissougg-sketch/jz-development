---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<BaseLayout
  title="Thank You"
  description="Thank you for contacting JZ Development & Management LLC. We'll get back to you within 24 hours."
>
  <Header slot="header" />

  <section class="section bg-white min-h-[60vh] flex items-center">
    <div class="container mx-auto px-4">
      <div class="max-w-2xl mx-auto text-center">
        <!-- Success Icon -->
        <div class="w-20 h-20 mx-auto mb-6 rounded-full bg-green-100 flex items-center justify-center">
          <svg class="w-10 h-10 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
          </svg>
        </div>

        <h1 class="text-[var(--charcoal)] mb-4">Thank You!</h1>

        <p class="text-xl text-gray-600 mb-6">
          Your quote request has been submitted successfully.
        </p>

        <div class="bg-[var(--light-gray)] rounded-xl p-6 mb-8">
          <h2 class="text-lg font-bold text-[var(--charcoal)] mb-3">What Happens Next?</h2>
          <ul class="text-left space-y-3 max-w-md mx-auto">
            <li class="flex items-start gap-3">
              <span class="flex-shrink-0 w-6 h-6 rounded-full bg-[var(--slate-blue)] text-white text-sm flex items-center justify-center font-semibold">1</span>
              <span class="text-gray-600">We'll review your project details</span>
            </li>
            <li class="flex items-start gap-3">
              <span class="flex-shrink-0 w-6 h-6 rounded-full bg-[var(--slate-blue)] text-white text-sm flex items-center justify-center font-semibold">2</span>
              <span class="text-gray-600">A team member will contact you within 24 hours</span>
            </li>
            <li class="flex items-start gap-3">
              <span class="flex-shrink-0 w-6 h-6 rounded-full bg-[var(--slate-blue)] text-white text-sm flex items-center justify-center font-semibold">3</span>
              <span class="text-gray-600">We'll schedule a consultation if needed</span>
            </li>
            <li class="flex items-start gap-3">
              <span class="flex-shrink-0 w-6 h-6 rounded-full bg-[var(--slate-blue)] text-white text-sm flex items-center justify-center font-semibold">4</span>
              <span class="text-gray-600">You'll receive a detailed estimate</span>
            </li>
          </ul>
        </div>

        <p class="text-gray-600 mb-6">
          Need to reach us sooner? Give us a call!
        </p>

        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="tel:+16316059851" class="btn btn-primary">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
            (631) 605-9851
          </a>
          <a href="/" class="btn bg-[var(--light-gray)] text-[var(--charcoal)] hover:bg-[var(--medium-gray)]">
            Return Home
          </a>
        </div>
      </div>
    </div>
  </section>

  <Footer slot="footer" />
</BaseLayout>
