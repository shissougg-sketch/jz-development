---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Hero from '../components/Hero.astro';
import CTASection from '../components/CTASection.astro';

const credentials = [
  {
    icon: "shield",
    title: "Licensed & Insured",
    description: "Fully licensed general contractor with comprehensive liability and workers' compensation insurance for your protection."
  },
  {
    icon: "clock",
    title: "25+ Years Experience",
    description: "Over two decades of combined experience in residential and commercial construction across Long Island."
  },
  {
    icon: "certificate",
    title: "Epoxy Certified",
    description: "Factory-trained and certified in professional epoxy flooring installation techniques and materials."
  },
  {
    icon: "star",
    title: "Quality Guaranteed",
    description: "We stand behind our work with a commitment to quality craftsmanship and customer satisfaction."
  }
];

const whyChooseUs = [
  "Transparent pricing with detailed written estimates",
  "Clear communication throughout your project",
  "Experienced, professional crews",
  "Quality materials from trusted suppliers",
  "Clean, organized job sites",
  "On-time project completion",
  "Responsive to your questions and concerns",
  "Local company that cares about our community"
];

const serviceAreas = [
  "Babylon", "Brookhaven", "East Hampton", "Huntington", "Islip",
  "Riverhead", "Shelter Island", "Smithtown", "Southampton", "Southold",
  "Hempstead", "North Hempstead", "Oyster Bay", "Glen Cove", "Long Beach"
];
---

<BaseLayout
  title="About Us"
  description="Learn about JZ Development & Management LLC - a family-owned Long Island general contractor with 25+ years experience. Licensed, insured, and committed to quality craftsmanship. Serving Nassau & Suffolk County."
>
  <Header slot="header" />

  <!-- Hero -->
  <Hero
    variant="page"
    title="About JZ Development"
    subtitle="Your trusted Long Island general contractor, committed to quality craftsmanship and exceptional service."
  />

  <!-- About Content -->
  <section class="section bg-white">
    <div class="container mx-auto px-4">
      <div class="grid md:grid-cols-2 gap-8 md:gap-12 items-center">
        <!-- Image Placeholder -->
        <div class="aspect-video md:aspect-square rounded-xl overflow-hidden bg-gradient-to-br from-[var(--primary)] to-[var(--primary-dark)] flex items-center justify-center">
          <div class="text-center p-8">
            <svg class="w-20 h-20 text-white opacity-40 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
            </svg>
            <span class="text-white/70 font-medium">JZ Development</span>
            <p class="text-white/50 text-sm mt-1">Est. 2021</p>
          </div>
        </div>

        <!-- Content -->
        <div>
          <h2 class="text-[var(--charcoal)] mb-4">Our Story</h2>
          <p class="text-gray-600 mb-4">
            JZ Development & Management LLC was founded in 2021 with a simple mission: to provide Long Island homeowners and businesses with quality construction services they can trust. As a locally owned and operated company, we understand the unique needs of our community and take pride in serving our neighbors.
          </p>
          <p class="text-gray-600 mb-4">
            With over 25 years of combined experience in the construction industry, our team brings expertise across a wide range of services - from masonry and concrete work to complete renovations and new construction. We've built our reputation on delivering exceptional craftsmanship, honest communication, and reliable service.
          </p>
          <p class="text-gray-600">
            Every project we take on, whether large or small, receives our full attention and commitment to quality. We believe in doing the job right the first time, using quality materials, and treating every home and business as if it were our own.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Credentials -->
  <section class="section bg-[var(--light-gray)]">
    <div class="container mx-auto px-4">
      <div class="text-center mb-12">
        <h2 class="text-[var(--charcoal)] mb-4">Our Credentials</h2>
        <p class="text-gray-600 max-w-2xl mx-auto">
          We're proud of our qualifications and the trust our clients place in us.
        </p>
      </div>

      <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-6">
        {credentials.map((credential) => (
          <div class="bg-white rounded-xl p-6 text-center shadow-sm">
            <div class="w-16 h-16 mx-auto mb-4 rounded-full bg-[var(--slate-blue)] flex items-center justify-center">
              {credential.icon === 'shield' && (
                <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                </svg>
              )}
              {credential.icon === 'clock' && (
                <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              )}
              {credential.icon === 'certificate' && (
                <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z" />
                </svg>
              )}
              {credential.icon === 'star' && (
                <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z" />
                </svg>
              )}
            </div>
            <h3 class="text-lg font-bold text-[var(--charcoal)] mb-2">{credential.title}</h3>
            <p class="text-sm text-gray-600">{credential.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Why Choose Us -->
  <section class="section bg-white">
    <div class="container mx-auto px-4">
      <div class="grid md:grid-cols-2 gap-8 md:gap-12 items-center">
        <!-- Content -->
        <div>
          <h2 class="text-[var(--charcoal)] mb-6">Why Choose JZ Development?</h2>
          <ul class="space-y-3">
            {whyChooseUs.map((item) => (
              <li class="flex items-start gap-3">
                <svg class="w-6 h-6 text-[var(--accent-gold)] flex-shrink-0" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                </svg>
                <span class="text-gray-600">{item}</span>
              </li>
            ))}
          </ul>
        </div>

        <!-- Image Placeholder -->
        <div class="aspect-video md:aspect-square rounded-xl overflow-hidden relative">
          <img
            src="https://images.unsplash.com/photo-1504307651254-35680f356dfd?auto=format&fit=crop&w=800&q=80"
            alt="Construction work in progress"
            class="w-full h-full object-cover"
            loading="lazy"
          />
          <div class="absolute inset-0 bg-gradient-to-t from-[var(--charcoal)]/30 to-transparent"></div>
        </div>
      </div>
    </div>
  </section>

  <!-- Service Area -->
  <section class="section bg-[var(--light-gray)]">
    <div class="container mx-auto px-4">
      <div class="text-center mb-10">
        <h2 class="text-[var(--charcoal)] mb-4">Service Area</h2>
        <p class="text-gray-600 max-w-2xl mx-auto">
          We proudly serve all of Long Island, including Nassau County and Suffolk County. Our team is familiar with local building codes, permits, and the unique construction needs of our region.
        </p>
      </div>

      <div class="bg-white rounded-xl p-8 shadow-sm">
        <div class="grid md:grid-cols-2 gap-8">
          <div>
            <h3 class="text-lg font-bold text-[var(--charcoal)] mb-4 flex items-center gap-2">
              <svg class="w-5 h-5 text-[var(--slate-blue)]" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
              </svg>
              Towns & Areas We Serve:
            </h3>
            <div class="flex flex-wrap gap-2">
              {serviceAreas.map((area) => (
                <span class="inline-block px-3 py-1 bg-[var(--light-gray)] text-sm text-gray-600 rounded-full">
                  {area}
                </span>
              ))}
              <span class="inline-block px-3 py-1 bg-[var(--slate-blue)] text-sm text-white rounded-full">
                + All of Long Island
              </span>
            </div>
          </div>

          <div>
            <h3 class="text-lg font-bold text-[var(--charcoal)] mb-4 flex items-center gap-2">
              <svg class="w-5 h-5 text-[var(--slate-blue)]" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7" />
              </svg>
              Counties:
            </h3>
            <div class="space-y-2">
              <div class="flex items-center gap-2">
                <svg class="w-5 h-5 text-[var(--accent-gold)]" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                </svg>
                <span class="text-gray-600">Nassau County - All Towns</span>
              </div>
              <div class="flex items-center gap-2">
                <svg class="w-5 h-5 text-[var(--accent-gold)]" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                </svg>
                <span class="text-gray-600">Suffolk County - All Towns</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA -->
  <CTASection
    variant="dark"
    title="Let's Build Something Together"
    description="Ready to start your project? Contact us today for a free estimate and consultation."
  />

  <Footer slot="footer" />
</BaseLayout>
