---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Hero from '../components/Hero.astro';

const projectTypes = [
  "Masonry & Stonework",
  "Foundations & Concrete",
  "Full Gut Renovation",
  "Kitchen Remodel",
  "Bathroom Remodel",
  "Epoxy Flooring",
  "Exterior Work (Siding, Deck, Fence)",
  "New Construction",
  "Other"
];

const budgetRanges = [
  "Under $10,000",
  "$10,000 - $25,000",
  "$25,000 - $50,000",
  "$50,000 - $100,000",
  "$100,000+",
  "Not Sure / Need Estimate"
];
---

<BaseLayout
  title="Contact Us"
  description="Contact JZ Development & Management LLC for a free estimate on your construction project. Call (631) 605-9851 or fill out our quote request form. Serving all of Long Island."
>
  <Header slot="header" />

  <!-- Hero -->
  <Hero
    variant="page"
    title="Contact Us"
    subtitle="Get a free estimate for your project. We're here to help bring your vision to life."
  />

  <!-- Contact Content -->
  <section class="section bg-white">
    <div class="container mx-auto px-4">
      <div class="grid lg:grid-cols-5 gap-8 lg:gap-12">
        <!-- Contact Form -->
        <div class="lg:col-span-3">
          <div id="quote-form-container" class="bg-[var(--light-gray)] rounded-xl p-6 md:p-8 scroll-mt-24">
            <h2 class="text-[var(--charcoal)] mb-2 section-title">Request a Free Quote</h2>
            <p class="text-gray-600 mb-6">
              Fill out the form below and we'll get back to you within 24 hours.
            </p>

            <!-- Progress Indicator -->
            <div id="progress-indicator" class="mb-6">
              <div class="flex items-center justify-between mb-2">
                <span id="step-label" class="text-sm font-medium text-[var(--primary)]">Step 1 of 2</span>
                <span id="step-desc" class="text-sm text-gray-500">Your Contact Info</span>
              </div>
              <div class="h-2 bg-gray-200 rounded-full overflow-hidden">
                <div id="progress-bar" class="h-full bg-[var(--secondary)] rounded-full transition-all duration-300" style="width: 50%"></div>
              </div>
            </div>

            <form
              id="quote-form"
              action="https://formsubmit.co/JZamboliDevelopment@gmail.com"
              method="POST"
              enctype="multipart/form-data"
            >
              <!-- FormSubmit Configuration -->
              <input type="hidden" name="_subject" value="New Quote Request - JZ Development" />
              <input type="hidden" name="_captcha" value="true" />
              <input type="hidden" name="_template" value="table" />
              <input type="text" name="_honey" style="display:none" />

              <!-- STEP 1: Contact Info -->
              <div id="step-1" class="space-y-5">
                <!-- Name & Phone Row -->
                <div class="grid sm:grid-cols-2 gap-4">
                  <div>
                    <label for="name" class="block text-sm font-medium text-gray-700 mb-1">
                      Full Name <span class="text-red-500">*</span>
                    </label>
                    <input
                      type="text"
                      id="name"
                      name="name"
                      required
                      minlength="2"
                      placeholder="John Smith"
                      class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[var(--slate-blue)] focus:border-transparent transition"
                    />
                  </div>
                  <div>
                    <label for="phone" class="block text-sm font-medium text-gray-700 mb-1">
                      Phone Number <span class="text-red-500">*</span>
                    </label>
                    <input
                      type="tel"
                      id="phone"
                      name="phone"
                      required
                      placeholder="(631) 555-1234"
                      pattern="[\d\s\-\(\)\+]+"
                      title="Please enter a valid phone number"
                      class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[var(--slate-blue)] focus:border-transparent transition"
                    />
                  </div>
                </div>

                <!-- Email -->
                <div>
                  <label for="email" class="block text-sm font-medium text-gray-700 mb-1">
                    Email Address <span class="text-red-500">*</span>
                  </label>
                  <input
                    type="email"
                    id="email"
                    name="email"
                    required
                    placeholder="john@example.com"
                    class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[var(--slate-blue)] focus:border-transparent transition"
                  />
                </div>

                <!-- Project Type -->
                <div>
                  <label for="project-type" class="block text-sm font-medium text-gray-700 mb-1">
                    Project Type <span class="text-red-500">*</span>
                  </label>
                  <select
                    id="project-type"
                    name="project_type"
                    required
                    class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[var(--slate-blue)] focus:border-transparent transition bg-white"
                  >
                    <option value="">Select a project type...</option>
                    {projectTypes.map((type) => (
                      <option value={type}>{type}</option>
                    ))}
                  </select>
                </div>

                <!-- Next Button -->
                <button type="button" id="next-step-btn" class="btn btn-primary w-full text-lg py-4">
                  Continue
                  <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                  </svg>
                </button>
              </div>

              <!-- STEP 2: Project Details -->
              <div id="step-2" class="space-y-5 hidden">
                <!-- Property Address -->
                <div class="grid sm:grid-cols-2 gap-4">
                  <div>
                    <label for="street" class="block text-sm font-medium text-gray-700 mb-1">
                      Street Address
                    </label>
                    <input
                      type="text"
                      id="street"
                      name="street_address"
                      placeholder="123 Main St"
                      class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[var(--slate-blue)] focus:border-transparent transition"
                    />
                  </div>
                  <div>
                    <label for="town" class="block text-sm font-medium text-gray-700 mb-1">
                      Town
                    </label>
                    <input
                      type="text"
                      id="town"
                      name="town"
                      placeholder="Smithtown, NY 11787"
                      class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[var(--slate-blue)] focus:border-transparent transition"
                    />
                  </div>
                </div>

                <!-- Budget Range -->
                <div>
                  <label for="budget" class="block text-sm font-medium text-gray-700 mb-1">
                    Budget Range
                  </label>
                  <select
                    id="budget"
                    name="budget"
                    class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[var(--slate-blue)] focus:border-transparent transition bg-white"
                  >
                    <option value="">Select a budget range...</option>
                    {budgetRanges.map((range) => (
                      <option value={range}>{range}</option>
                    ))}
                  </select>
                </div>

                <!-- Project Description -->
                <div>
                  <label for="description" class="block text-sm font-medium text-gray-700 mb-1">
                    Project Description <span class="text-red-500">*</span>
                  </label>
                  <textarea
                    id="description"
                    name="description"
                    rows="4"
                    required
                    minlength="20"
                    placeholder="Please describe your project, including any specific requirements or questions..."
                    class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[var(--slate-blue)] focus:border-transparent transition resize-none"
                  ></textarea>
                </div>

                <!-- File Upload -->
                <div>
                  <label for="attachments" class="block text-sm font-medium text-gray-700 mb-1">
                    Attach Photos or Plans (Optional)
                  </label>
                  <div
                    id="drop-zone"
                    class="relative border-2 border-dashed border-gray-300 rounded-lg p-6 text-center hover:border-[var(--slate-blue)] transition-colors cursor-pointer"
                  >
                    <input
                      type="file"
                      id="attachments"
                      accept="image/*,.pdf,.doc,.docx"
                      multiple
                      class="absolute inset-0 w-full h-full opacity-0 cursor-pointer"
                    />
                    <div id="drop-zone-content">
                      <svg class="w-10 h-10 mx-auto text-gray-400 mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12" />
                      </svg>
                      <p class="text-gray-600 mb-1">Drag and drop files here, or <span class="text-[var(--slate-blue)] font-medium">browse</span></p>
                    </div>
                    <div id="file-previews" class="grid grid-cols-3 sm:grid-cols-4 gap-3 mt-4"></div>
                  </div>
                  <p class="text-xs text-gray-500 mt-1">
                    Accepted formats: Images, PDF, Word documents. Max 5MB per file.
                  </p>
                </div>

                <!-- Back & Submit Buttons -->
                <div class="flex gap-3">
                  <button type="button" id="back-step-btn" class="btn bg-white border border-gray-300 text-gray-700 hover:bg-gray-50 flex-shrink-0">
                    <svg class="w-5 h-5 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16l-4-4m0 0l4-4m-4 4h18" />
                    </svg>
                    Back
                  </button>
                  <button type="submit" class="btn btn-primary flex-1 text-lg py-4">
                    Submit Request
                  </button>
                </div>

                <p class="text-xs text-gray-500 text-center">
                  By submitting this form, you agree to be contacted regarding your project.
                </p>
              </div>
            </form>
          </div>
        </div>

        <!-- Contact Info Sidebar -->
        <div class="lg:col-span-2">
          <div class="sticky top-24 space-y-6">
            <!-- Quick Contact -->
            <div class="bg-gradient-to-br from-[var(--primary)] to-[var(--primary-dark)] text-white rounded-xl p-6">
              <h3 class="text-xl font-bold mb-4 text-white">Quick Contact</h3>

              <div class="space-y-4">
                <a href="tel:+16316059851" class="flex items-start gap-4 p-3 rounded-lg hover:bg-white/10 transition-colors">
                  <div class="w-12 h-12 rounded-full bg-[var(--slate-blue)] flex items-center justify-center flex-shrink-0">
                    <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                    </svg>
                  </div>
                  <div>
                    <p class="text-sm text-gray-400">Call Us</p>
                    <p class="font-semibold text-lg">(631) 605-9851</p>
                    <p class="text-sm text-gray-400">Tap to call</p>
                  </div>
                </a>

                <a id="contact-sms-link" href="sms:+16316059851" class="flex items-start gap-4 p-3 rounded-lg hover:bg-white/10 transition-colors">
                  <div class="w-12 h-12 rounded-full bg-[var(--slate-blue)] flex items-center justify-center flex-shrink-0">
                    <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
                    </svg>
                  </div>
                  <div>
                    <p class="text-sm text-gray-400">Text Us</p>
                    <p class="font-semibold text-lg">(631) 605-9851</p>
                    <p class="text-sm text-gray-400">Tap to text</p>
                  </div>
                </a>

                <a href="mailto:JZamboliDevelopment@gmail.com" class="flex items-start gap-4 p-3 rounded-lg hover:bg-white/10 transition-colors">
                  <div class="w-12 h-12 rounded-full bg-[var(--slate-blue)] flex items-center justify-center flex-shrink-0">
                    <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                    </svg>
                  </div>
                  <div>
                    <p class="text-sm text-gray-400">Email Us</p>
                    <p class="font-semibold break-all">JZamboliDevelopment@gmail.com</p>
                  </div>
                </a>
              </div>
            </div>

            <!-- Business Hours -->
            <div class="bg-[var(--light-gray)] rounded-xl p-6">
              <h3 class="text-lg font-bold text-[var(--charcoal)] mb-4 flex items-center gap-2">
                <svg class="w-5 h-5 text-[var(--slate-blue)]" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                Business Hours
              </h3>
              <div class="space-y-2 text-sm">
                <div class="flex justify-between">
                  <span class="text-gray-600">Monday - Friday</span>
                  <span class="font-medium">7:00 AM - 6:00 PM</span>
                </div>
                <div class="flex justify-between">
                  <span class="text-gray-600">Saturday</span>
                  <span class="font-medium">8:00 AM - 4:00 PM</span>
                </div>
                <div class="flex justify-between">
                  <span class="text-gray-600">Sunday</span>
                  <span class="font-medium">Closed</span>
                </div>
              </div>
              <p class="text-xs text-gray-500 mt-4">
                * Emergency services available by appointment
              </p>
            </div>

            <!-- Service Area -->
            <div class="bg-[var(--light-gray)] rounded-xl p-6">
              <h3 class="text-lg font-bold text-[var(--charcoal)] mb-4 flex items-center gap-2">
                <svg class="w-5 h-5 text-[var(--slate-blue)]" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
                Service Area
              </h3>
              <p class="text-gray-600 text-sm mb-3">
                We proudly serve all of Long Island:
              </p>
              <ul class="space-y-1 text-sm">
                <li class="flex items-center gap-2">
                  <svg class="w-4 h-4 text-[var(--accent-gold)]" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                  </svg>
                  <span class="text-gray-600">Nassau County</span>
                </li>
                <li class="flex items-center gap-2">
                  <svg class="w-4 h-4 text-[var(--accent-gold)]" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                  </svg>
                  <span class="text-gray-600">Suffolk County</span>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <Footer slot="footer" />
</BaseLayout>

<script>
  const form = document.getElementById('quote-form') as HTMLFormElement;
  const container = document.getElementById('quote-form-container') as HTMLElement;
  const dropZone = document.getElementById('drop-zone') as HTMLElement;
  const dropZoneContent = document.getElementById('drop-zone-content') as HTMLElement;
  const fileInput = document.getElementById('attachments') as HTMLInputElement;
  const filePreviews = document.getElementById('file-previews') as HTMLElement;

  // Step elements
  const step1 = document.getElementById('step-1') as HTMLElement;
  const step2 = document.getElementById('step-2') as HTMLElement;
  const nextBtn = document.getElementById('next-step-btn') as HTMLButtonElement;
  const backBtn = document.getElementById('back-step-btn') as HTMLButtonElement;
  const stepLabel = document.getElementById('step-label') as HTMLElement;
  const stepDesc = document.getElementById('step-desc') as HTMLElement;
  const progressBar = document.getElementById('progress-bar') as HTMLElement;

  // Track selected files (since FileList is immutable)
  let selectedFiles: File[] = [];

  // Pre-fill form from URL params (from quick quote form or services page)
  const urlParams = new URLSearchParams(window.location.search);
  const nameParam = urlParams.get('name');
  const phoneParam = urlParams.get('phone');
  const descriptionParam = urlParams.get('description');
  const serviceParam = urlParams.get('service');

  if (nameParam) {
    (document.getElementById('name') as HTMLInputElement).value = nameParam;
  }
  if (phoneParam) {
    (document.getElementById('phone') as HTMLInputElement).value = phoneParam;
  }
  if (descriptionParam) {
    (document.getElementById('description') as HTMLTextAreaElement).value = descriptionParam;
  }
  if (serviceParam) {
    const projectTypeSelect = document.getElementById('project-type') as HTMLSelectElement;
    // Map service shortTitles to project types
    const serviceToProjectType: Record<string, string> = {
      'home renovations': 'Full Gut Renovation',
      'kitchen & bath': 'Kitchen Remodel',
      'masonry': 'Masonry & Stonework',
      'exterior': 'Exterior Work (Siding, Deck, Fence)',
      'concrete': 'Foundations & Concrete',
      'epoxy flooring': 'Epoxy Flooring',
      'new construction': 'New Construction',
      'maintenance': 'Other'
    };

    const normalizedService = serviceParam.toLowerCase();
    const mappedType = serviceToProjectType[normalizedService];

    if (mappedType) {
      projectTypeSelect.value = mappedType;
    } else {
      // Fallback: try partial matching
      const options = Array.from(projectTypeSelect.options);
      const matchingOption = options.find(opt =>
        opt.value.toLowerCase().includes(normalizedService) ||
        normalizedService.includes(opt.value.toLowerCase().split(' ')[0])
      );
      if (matchingOption) {
        projectTypeSelect.value = matchingOption.value;
      }
    }
  }

  // Step navigation
  function goToStep(stepNumber: number) {
    if (stepNumber === 1) {
      step1.classList.remove('hidden');
      step2.classList.add('hidden');
      stepLabel.textContent = 'Step 1 of 2';
      stepDesc.textContent = 'Your Contact Info';
      progressBar.style.width = '50%';
    } else {
      step1.classList.add('hidden');
      step2.classList.remove('hidden');
      stepLabel.textContent = 'Step 2 of 2';
      stepDesc.textContent = 'Project Details';
      progressBar.style.width = '100%';
      // Focus first field in step 2
      (document.getElementById('street') as HTMLInputElement)?.focus();
    }
    // Scroll to top of form
    container.scrollIntoView({ behavior: 'smooth', block: 'start' });
  }

  // Validate step 1 fields
  function validateStep1(): boolean {
    const nameInput = document.getElementById('name') as HTMLInputElement;
    const phoneInput = document.getElementById('phone') as HTMLInputElement;
    const emailInput = document.getElementById('email') as HTMLInputElement;
    const projectTypeSelect = document.getElementById('project-type') as HTMLSelectElement;

    // Check name
    if (!nameInput.value || nameInput.value.length < 2) {
      nameInput.focus();
      nameInput.classList.add('border-red-500');
      return false;
    }
    nameInput.classList.remove('border-red-500');

    // Check phone
    if (!isValidPhone(phoneInput.value)) {
      showPhoneError(true);
      phoneInput.focus();
      return false;
    }
    showPhoneError(false);

    // Check email
    if (!emailInput.value || !emailInput.validity.valid) {
      emailInput.focus();
      emailInput.classList.add('border-red-500');
      return false;
    }
    emailInput.classList.remove('border-red-500');

    // Check project type
    if (!projectTypeSelect.value) {
      projectTypeSelect.focus();
      projectTypeSelect.classList.add('border-red-500');
      return false;
    }
    projectTypeSelect.classList.remove('border-red-500');

    return true;
  }

  // Next button click
  nextBtn.addEventListener('click', () => {
    if (validateStep1()) {
      goToStep(2);
    }
  });

  // Back button click
  backBtn.addEventListener('click', () => {
    goToStep(1);
  });

  // Drag and drop handling
  ['dragenter', 'dragover'].forEach(eventName => {
    dropZone.addEventListener(eventName, (e) => {
      e.preventDefault();
      dropZone.classList.add('border-[var(--slate-blue)]', 'bg-blue-50');
    });
  });

  ['dragleave', 'drop'].forEach(eventName => {
    dropZone.addEventListener(eventName, (e) => {
      e.preventDefault();
      dropZone.classList.remove('border-[var(--slate-blue)]', 'bg-blue-50');
    });
  });

  dropZone.addEventListener('drop', (e) => {
    const dt = e.dataTransfer;
    if (dt?.files) {
      addFiles(dt.files);
    }
  });

  fileInput.addEventListener('change', () => {
    if (fileInput.files) {
      addFiles(fileInput.files);
    }
  });

  function addFiles(files: FileList) {
    for (let i = 0; i < files.length; i++) {
      selectedFiles.push(files[i]);
    }
    renderPreviews();
  }

  function removeFile(index: number) {
    // Revoke object URL to free memory
    const file = selectedFiles[index];
    if (file.type.startsWith('image/')) {
      URL.revokeObjectURL(URL.createObjectURL(file));
    }
    selectedFiles.splice(index, 1);
    renderPreviews();
  }

  function renderPreviews() {
    filePreviews.innerHTML = '';

    if (selectedFiles.length === 0) {
      dropZoneContent.style.display = 'block';
      return;
    }

    dropZoneContent.style.display = 'none';

    selectedFiles.forEach((file, index) => {
      const wrapper = document.createElement('div');
      wrapper.className = 'relative group';

      if (file.type.startsWith('image/')) {
        // Image thumbnail
        const img = document.createElement('img');
        img.src = URL.createObjectURL(file);
        img.className = 'w-20 h-20 object-cover rounded-lg border border-gray-200';
        img.alt = file.name;
        wrapper.appendChild(img);
      } else {
        // Document icon for non-images
        const docIcon = document.createElement('div');
        docIcon.className = 'w-20 h-20 rounded-lg border border-gray-200 bg-gray-50 flex flex-col items-center justify-center p-2';
        docIcon.innerHTML = `
          <svg class="w-8 h-8 text-gray-400 mb-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
          </svg>
          <span class="text-xs text-gray-500 truncate w-full text-center">${file.name.split('.').pop()?.toUpperCase()}</span>
        `;
        wrapper.appendChild(docIcon);
      }

      // Remove button
      const removeBtn = document.createElement('button');
      removeBtn.type = 'button';
      removeBtn.className = 'absolute -top-2 -right-2 w-6 h-6 bg-red-500 text-white rounded-full flex items-center justify-center text-sm font-bold hover:bg-red-600 shadow-md';
      removeBtn.innerHTML = '&times;';
