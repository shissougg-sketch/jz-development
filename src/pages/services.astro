---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Hero from '../components/Hero.astro';
import CTASection from '../components/CTASection.astro';
import ServiceExplorer from '../components/ServiceExplorer.astro';

interface Service {
  id: string;
  title: string;
  shortTitle: string;
  description: string[];
  projectTypes: string[];
  icon: string;
  image?: string;
}

const services: Service[] = [
  {
    id: "renovations",
    title: "Full Home Renovations (Gut Renovations)",
    shortTitle: "Home Renovations",
    description: [
      "Complete interior and exterior renovations, from demolition to final finishes. We handle full gut renovations that transform outdated spaces into the home of your dreams, managing every detail of your project.",
      "Our renovation team coordinates all trades and ensures seamless execution, keeping your project on track and on budget. Whether you're updating a single room or renovating an entire home, we deliver quality craftsmanship at every stage."
    ],
    projectTypes: [
      "Whole-house renovations",
      "Complete interior transformations",
      "Open concept conversions",
      "Basement finishing",
      "Attic conversions",
      "Historic home restoration",
      "Structural modifications"
    ],
    icon: "renovation"
  },
  {
    id: "kitchens-bathrooms",
    title: "Kitchen & Bathroom Remodeling",
    shortTitle: "Kitchen & Bath",
    description: [
      "Custom kitchens and bathrooms designed for function, comfort, and long-term value. Our remodeling team creates beautiful, functional spaces that combine quality materials, expert craftsmanship, and thoughtful design.",
      "From custom cabinetry and countertops to tile work and fixture installation, we handle every aspect of your kitchen or bathroom project. We work closely with you to understand your style preferences and create spaces that exceed your expectations."
    ],
    projectTypes: [
      "Complete kitchen remodels",
      "Custom cabinet installation",
      "Countertop fabrication & install",
      "Bathroom renovations",
      "Shower & tub surrounds",
      "Tile flooring & backsplashes",
      "Plumbing fixture upgrades"
    ],
    icon: "kitchen"
  },
  {
    id: "masonry",
    title: "Masonry & Stonework",
    shortTitle: "Masonry",
    description: [
      "Expert brick, block, and stone craftsmanship for structural and decorative projects. Our masonry team delivers stunning installations that enhance both the beauty and value of your property.",
      "We work with a wide variety of materials including natural stone, brick, concrete block, and premium manufactured veneers. Every project is completed with meticulous attention to detail, ensuring lasting durability and timeless appeal."
    ],
    projectTypes: [
      "Brick & stone facades",
      "Retaining walls",
      "Outdoor fireplaces & fire pits",
      "Chimney repair & rebuilding",
      "Paver patios & walkways",
      "Stone steps & landings",
      "Block foundation work"
    ],
    icon: "brick"
  },
  {
    id: "exterior",
    title: "Exterior Improvements & Stone Veneers",
    shortTitle: "Exterior",
    description: [
      "Exterior upgrades including stone veneers, facades, walkways, and entry features. Protect and beautify your home's exterior with our comprehensive services.",
      "We use quality materials designed to withstand Long Island's coastal climate, and our experienced crews ensure proper installation for lasting protection and curb appeal."
    ],
    projectTypes: [
      "Stone veneer installation",
      "Facade improvements",
      "Walkways & entry features",
      "Siding installation & repair",
      "Deck construction & refinishing",
      "Window & door replacement",
      "Exterior painting"
    ],
    icon: "exterior"
  },
  {
    id: "foundations",
    title: "Concrete & Foundations",
    shortTitle: "Concrete",
    description: [
      "Foundations, slabs, footings, and structural concrete work done right the first time. A strong foundation is the cornerstone of any successful construction project.",
      "We handle residential and commercial concrete projects of all sizes, using quality materials and proven techniques to ensure your foundation will stand the test of time. Our experienced crews deliver clean, professional results on every job."
    ],
    projectTypes: [
      "New foundation construction",
      "Foundation repair & waterproofing",
      "Concrete slabs & footings",
      "Driveways & sidewalks",
      "Basement floor replacement",
      "Concrete steps & porches",
      "Decorative stamped concrete"
    ],
    icon: "foundation"
  },
  {
    id: "epoxy",
    title: "Epoxy Flooring (Certified Installer)",
    shortTitle: "Epoxy Flooring",
    description: [
      "Durable, seamless epoxy flooring for garages, basements, and utility spaces. As certified epoxy installers, we deliver beautiful floors that resist stains, chemicals, and wear while transforming ordinary concrete into a showroom-quality surface.",
      "We offer a variety of epoxy systems including solid colors, metallic finishes, and decorative flake options. Our thorough preparation process ensures maximum adhesion and longevity, backed by our workmanship guarantee."
    ],
    projectTypes: [
      "Garage floor coating",
      "Basement floor finishing",
      "Commercial & industrial floors",
      "Metallic epoxy finishes",
      "Decorative flake systems",
      "Anti-slip coatings",
      "Concrete repair & prep"
    ],
    icon: "epoxy"
  },
  {
    id: "new-construction",
    title: "New Construction (Ground-Up Builds)",
    shortTitle: "New Construction",
    description: [
      "Complete new home construction from foundation to finish. Building from the ground up gives you the opportunity to create exactly the space you envision.",
      "We work closely with architects, engineers, and municipal authorities to ensure your project meets all codes and specifications. Our experienced project management keeps your build on schedule and within budget."
    ],
    projectTypes: [
      "Custom home construction",
      "Accessory dwelling units (ADUs)",
      "Garage & workshop buildings",
      "Commercial build-outs",
      "Additions & expansions",
      "Detached structures",
      "Site preparation"
    ],
    icon: "construction"
  },
  {
    id: "maintenance",
    title: "Property Maintenance & Structural Repairs",
    shortTitle: "Maintenance",
    description: [
      "Repairs, structural fixes, and maintenance for long-term property care. We provide comprehensive maintenance services to keep your property in top condition and address issues before they become major problems.",
      "From routine repairs to structural fixes, our experienced team handles all aspects of property maintenance with the same attention to detail we bring to larger projects."
    ],
    projectTypes: [
      "Structural repairs",
      "Foundation repairs",
      "Framing repairs",
      "Water damage restoration",
      "General property maintenance",
      "Emergency repairs",
      "Preventive maintenance"
    ],
    icon: "maintenance"
  }
];
---

<BaseLayout
  title="Services"
  description="JZ Development offers comprehensive construction services on Long Island including masonry, foundations, renovations, kitchens, bathrooms, epoxy flooring, exterior work, and new construction. Licensed & insured."
>
  <Header slot="header" />

  <!-- Hero -->
  <Hero
    variant="page"
    title="Our Services"
    subtitle="Comprehensive construction services delivered with quality craftsmanship and attention to detail."
  />

  <!-- Services Explorer -->
  <section class="section bg-white">
    <div class="container mx-auto px-4">
      <ServiceExplorer services={services} />
    </div>
  </section>

  <!-- CTA -->
  <CTASection
    title="Ready to Start Your Project?"
    description="Get a free estimate for any of our services. We're here to answer your questions and help bring your vision to life."
  />

  <Footer slot="footer" />
</BaseLayout>
